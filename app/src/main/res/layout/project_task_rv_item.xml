<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/project_task_name_tv"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:lines="1"
        android:paddingRight="90dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_width="match_parent" />
    <TextView
        android:id="@+id/project_task_description_tv"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingRight="90dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/project_task_name_tv"/>
    <Button
        android:id="@+id/del_project_task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_delete"
        android:layout_toLeftOf="@+id/project_task_chk_status"
        style="@style/Widget.App.Button.TextButton.IconOnly"
        />
    <CheckBox
        android:id="@+id/project_task_chk_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>