<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/project_card"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/card_color_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/title_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="25sp"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/delete_btn_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_delete"
            android:layout_toLeftOf="@+id/edit_btn_card"
            android:layout_below="@+id/card_color_iv"
            style="@style/Widget.App.Button.TextButton.IconOnly"
            />

        <Button
            android:id="@+id/edit_btn_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_edit"
            android:layout_toLeftOf="@+id/status_iv"
            android:layout_below="@+id/card_color_iv"
            style="@style/Widget.App.Button.TextButton.IconOnly"
            />

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_status"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/card_color_iv"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>